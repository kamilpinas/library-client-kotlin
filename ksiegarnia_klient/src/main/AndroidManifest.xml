<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ksiegarnia_klient">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.ksiegarnia_klient.StartScreenActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.ksiegarnia_klient.LoginActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.ksiegarnia_klient.DrawerActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.ksiegarnia_klient.RegisterActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.ksiegarnia_klient.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>